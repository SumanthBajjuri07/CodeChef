


#include<bits/stdc++.h>
using namespace std;

int main()
{
    int T,n,i,j;
    cin>>T;
    for(i=0;i<T;i++)
    {
        cin>>n;
        for(j=1;n>=0;j++)
        {
            if(n>=j)
            n=n-j;
            else
            {
                j--;
                break;
            }

        }
        cout<<j<<endl;
        j=1;
    }
    return 0;
}
